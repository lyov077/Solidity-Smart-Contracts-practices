{
	"name": "MarketPlace",
	"license": "MIT",
	"scripts": {
		"compile": "npm run prettier:solidity && npx hardhat compile",
		"test": "npm run eslint:fix && npx hardhat test test/hardhat/*",
		"test:fork": "npm run eslint:fix && npx hardhat test test/fork/*",
		"deploy": "npm run eslint:fix && npx hardhat deploy",
		"verify:rinkeby": "npx hardhat etherscan-verify --network rinkeby",
		"verify:mainnet": "npx hardhat etherscan-verify --network mainnet",
		"node": "npx hardhat node",
		"eslint": "npx eslint deploy/**/*.js test/**/*.js tasks/**/*.js ",
		"eslint:fix": "npx eslint --fix deploy/**/*.js test/**/*.js tasks/**/*.js ",
		"solhint": "solhint contracts/**/*.sol",
		"slither": "HARDHAT_DEPENDENCY_COMPILER_KEEP=true slither . --filter-paths \"node_modules/@chainlink|node_modules/@openzeppelin|node_modules/@uniswap|contracts/mocks|contracts/hardhat-dependency-compiler|libs\" --solc-remaps \"@chainlink/=$(pwd)/node_modules/@chainlink/ @openzeppelin/=$(pwd)/node_modules/@openzeppelin/ @uniswap/=$(pwd)/node_modules/@uniswap/\" && rm -rf contracts/hardhat-dependency-compiler",
		"prettier:solidity": "./node_modules/.bin/prettier --write 'contracts/**/*.sol'",
		"coverage": "IS_TEST_DEPLOY=true npx hardhat coverage",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@atixlabs/hardhat-time-n-mine": "^0.0.5",
		"@nomiclabs/hardhat-ethers": "^2.0.2",
		"@nomiclabs/hardhat-etherscan": "^2.1.6",
		"@nomiclabs/hardhat-solhint": "^2.0.0",
		"@nomiclabs/hardhat-solpp": "^2.0.0",
		"@nomiclabs/hardhat-waffle": "^2.0.1",
		"@openzeppelin/contracts": "^4.4.0",
		"@openzeppelin/hardhat-upgrades": "^1.10.0",
		"@tenderly/hardhat-tenderly": "^1.0.12",
		"@typechain/ethers-v5": "^7.0.1",
		"@typechain/hardhat": "^2.3.0",
		"chai": "^4.3.4",
		"dotenv": "^10.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-mocha": "^9.0.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-promise": "^5.1.0",
		"ethereum-waffle": "^3.4.0",
		"ethers": "^5.4.6",
		"hardhat": "^2.6.4",
		"hardhat-abi-exporter": "^2.3.0",
		"hardhat-contract-sizer": "^2.0.3",
		"hardhat-dependency-compiler": "^1.1.1",
		"hardhat-deploy": "^0.9.1",
		"hardhat-deploy-ethers": "*",
		"hardhat-docgen": "^1.1.2",
		"hardhat-ethernal": "*",
		"hardhat-gas-reporter": "^1.0.4",
		"hardhat-log-remover": "^2.0.2",
		"hardhat-preprocessor": "^0.1.4",
		"hardhat-spdx-license-identifier": "^2.0.3",
		"hardhat-tracer": "*",
		"husky": "^7.0.0",
		"prettier": "^2.4.1",
		"prettier-plugin-solidity": "^1.0.0-beta.13",
		"solhint": "^3.3.6",
		"solhint-plugin-prettier": "^0.0.5",
		"solidity-coverage": "^0.7.17",
		"typechain": "^5.0.0"
	},
	"dependencies": {
		"@nomiclabs/hardhat-web3": "^2.0.0",
		"@openzeppelin/test-helpers": "^0.5.15",
		"ethereumjs-util": "^7.1.0",
		"hardhat-local-networks-config-plugin": "^0.0.6",
		"solc": "^0.8.14-fixed",
		"soldocgen": "^0.0.3"
	}
}
